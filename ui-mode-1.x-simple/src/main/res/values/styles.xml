<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="ui_alpha">@dimen/ui_mode_alpha</item>
        <item name="bgc_white">#ffffff</item>
        <item name="fgc_color">#7ffdc247</item>
        <item name="tc_white">@color/tc_white</item>
        <item name="tc_3b424c">@color/tc_3b424c</item>
        <item name="divider_f0f0f0">@color/divider_f0f0f0</item>
        <item name="ic_customMaskColor">#7f000000</item>
        <item name="maskColor">@android:color/transparent</item>
        <item name="iv_useMaskColor">false</item>
        <item name="tv_drawable_top">@mipmap/module_user_ic_mytip</item>

        <item name="cb_button">@drawable/sl_cb_button</item>

        <item name="colorControlHighlight">#1f000000</item>
    </style>


    <style name="NightAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>

        <item name="android:textAllCaps">false</item>

        <item name="ui_alpha">0.5</item>
        <item name="bgc_white">@color/bg_white_night</item>
        <item name="fgc_color">#7ff70000</item>
        <item name="tc_white">@color/tc_white_night</item>
        <item name="tc_3b424c">@color/tc_3b424c_night</item>
        <item name="divider_f0f0f0">@color/divider_f0f0f0_night</item>
        <item name="ic_customMaskColor">#7f000000</item>
        <item name="maskColor">#7f000000</item>
        <item name="iv_useMaskColor">true</item>

        <item name="tv_drawable_top">@mipmap/module_user_ic_mytip_night</item>
        <item name="cb_button">@drawable/sl_cb_button_night</item>

        <item name="colorControlHighlight">#33ffffff</item>

    </style>

    <style name="TestStyle">
        <item name="tc_3b424c">#f00</item>
        <!--<item name="android:textColor">?attr/fgc_color</item>-->
    </style>

</resources>
